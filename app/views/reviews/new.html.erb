<h2>Create new review</h2>

<h3><%= @project.title %></h3>

<% if flash[:error] %>
  <div class = "alert-error">
    <%= flash[:error] %>
  </div>
<% end %>

<%= form_for @review do |f| %>
  <div class='big-box'>
    <div class='large-content-field'>
      <%= f.text_area(:content, cols: 90, rows: 16, style: 'padding: 10px; font-size: 1.25em;') %>
    </div>
    <%= f.hidden_field :project_id , value: @project.id %>
    <%= f.submit 'Submit', style: 'font-size: 1.25em;' %>
    <%= link_to 'cancel', project_path(@project) %>
  </div>
<% end %>
