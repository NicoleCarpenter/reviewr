<div class='alert-notice'>
  <% if flash[:notice] %>
    <%= flash[:notice] %>
  <% end %>
</div>

<h2>
  <span id='page-title'><%= @project.title %></span>&nbsp;
  <% if @user == @project.owner %>
    <%= link_to(edit_project_path(@project), class: 'edit-link', id: 'edit-project-link') do %>
      <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
    <% end %>
  <% end %>
</h2>

<div class='markdown-content'>
  <p><%= markdown(@project.description) %></p>
</div>
<br \>

<div id='new-review' class='load-form'></div>

<% if @reviews.length > 0 %>
  <% if @user == @project.owner %>
    <h3>Reviews</h3>
  <% else %>
    <h3>Your review</h3>
  <% end %>
<% end %>

<% if @user != @project.owner %>
  <%= link_to '+ review project', new_review_path(@project), class: 'new-form-link', remote: true, id: 'new-review-link' %>
<% end %>

<% @reviews.each do |review| %>
  <% if review.visible? or review.user == @user %>
    <div>
      <div class='bracket-box'>
        <div class='squarebrackets'>
          <%= link_to(review, class: 'bracket-link single-content') do %>
            <span class='carrot'>&gt;</span>
            <span class='card-small-text'>
              <%= truncate(review.content, length: 300) %>
            </span>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

